load 'anim'

set size ratio -1 # scale 1:1

set nokey
set nomouse

r = 2

set xrange [-r:r]
set yrange [-r:r]

t = 0
dt = 2
T = 500
pauseTime = 0.02

# planet styles
set style line 1 ps 6 pt 7 # sun
set style line 2 ps 3 pt 7 # jupiter
set style line 3 ps 3 pt 7 # jupiter

# 'every 1::t::t' plots only the 't'th point.
# 'every 10::0::t' plots every 10th point from 0 to the 't'th point.

plot d.'/sun' w p ls 1, \
     d.'/jupiter' every 1::t::t u 3:2 w p ls 2, \
     d.'/jupiter' every 5::0::t u 3:2 w l ls 2

load 'gnuplot/_timestep'
